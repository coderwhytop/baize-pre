{
  "name": "baize-pre",
  "type": "module",
  "version": "0.5.5",
  "description": "A useful progressive front-end normalization tool.",
  "author": "kevin",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baizeteam/baize-pre.git"
  },
  "keywords": [
    "front-end",
    "front-end format",
    "husky",
    "prettier",
    "husky",
    "basic",
    "vue",
    "react",
    "angular"
  ],
  "bin": {
    "baize": "dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.mjs",
    "build:watch": "rollup -c rollup.config.mjs -w",
    "build:publish": "npm run build && node scripts/bump-version.js",
    "dev": "nodemon --watch dist --exec node dist/index.mjs",
    "start": "npm run build:watch",
    "prepublishOnly": "npm run build:publish",
    "format": "prettier --write .",
    "lint-staged": "lint-staged",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint --fix . --ext .ts,.tsx,.js"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "readline-sync": "^1.4.10",
    "simple-git": "^3.27.0",
    "source-map-support": "^0.5.21",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.4.0",
    "@types/readline-sync": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint-define-config": "^2.1.0",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-typescript2": "^0.36.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "npx prettier --write"
    ]
  }
}
